
<% include ../partials/header %>
<body class="edit-back">
<div class="overlay-light"></div> 
<div class="container">
    <div class="row">
        <h1 class="h1-edit">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form  class="edit" action="/beaches/<%= beach_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group text-area">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group edit">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    <a class="btn" href="/beaches">Go Back</a>
                </div>
            </form>
          
        </div>
    </div>
</div>
</body>
