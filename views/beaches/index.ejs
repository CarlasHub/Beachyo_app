<% include ../partials/header %>
<body id="index-page">
<div class="overlay-light"></div> 

<% if(currentUser){%>
<h4>Hello <%= currentUser.username %></h4>
<% }else{ %>
<h3>Please Login first</h3>
<% } %>
<div class='container'>
    

<header class='jumbotron'>
    <div class='container'>
   
<h1>BEACHyo</h1> 
<p> Welcome to <span>Beachyo</span> Make it happen & Beach the world!</p>
<form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0 search" type="submit">Search</button><br><br>
<p> <a class='btn btn-primary btn-lg' href="/beaches/new/">Add a new beach</a></p>
</div>
</header>
<div class='row'>
    
<div class='col-lg-12'>
    <h2 class="pre-thumb">Our most popular beaches</h2>
</div>
</div>

<div class='row text-center' style='display:flex flex-wrap:wrap;'>
    
    
    <% beaches.forEach(function(beach){ %>
    
        <div class='col-md-3 col-sm-6' >
            <div class='thumbnail'>
                <img style="width:100%; height:100%;" src="<%= beach.image %>">
                <div class='caption'>
                     </h4> <%= beach.name %> </h4>
                </div>
                <p>
                    <a href="/beaches/<%= beach._id %>" class="btn btn-primary">More info </a>
                </p>
            </div>
         </div>
        <% }); %>
        </div>
</div>
</div>
<br><br>
<% include ../partials/footer%>
</body>
